<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CameraServerActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/localIP"
        android:layout_below="@+id/localIP"
        android:layout_marginTop="15dp"
        android:text="preview quality:"
        android:textSize="20dp" />

    <SeekBar
        android:id="@+id/qualitySeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="23dp" />

    <TextView
        android:id="@+id/localIP"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/qualitySeekBar"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="listen on port:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/qualityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/qualitySeekBar"
        android:layout_alignLeft="@+id/startListen"
        android:ems="10"
        android:inputType="number"
        android:text="100%"
        android:textSize="20dp" />

    <Button
        android:id="@+id/startListen"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/textView1"
        android:layout_alignRight="@+id/qualitySeekBar"
        android:text="Listen" />

    <EditText
        android:id="@+id/listenPort"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/startListen"
        android:layout_alignBottom="@+id/startListen"
        android:layout_toLeftOf="@+id/startListen"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:gravity="center" 
        android:inputType="numberDecimal"
        android:text="6666" />

</RelativeLayout>